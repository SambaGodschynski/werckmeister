using "./chords/default.chords";
using "./lua/mods/staccato.lua";

device: MyDevice  midi 5;
instrumentDef: pianoLH MyDevice 1 1 1;

instrumentConf: pianoLH 
    volume 100 
    pan    0
    mod staccato amout 100 
;

[
type: template;
name: myTemplate;
instrument: pianoLH;
{
    --/voicingStrategy: _use=simpleGuitar _range=higherRange/
    \ff

    "stacc"@<I, II, III, VI, V, VI, VII,>2 
    /modOnce: bend from 60/
    &2 |
}
]

[
type: accomp;
{
    /template: myTemplate/
    Cmaj7 |
}
]